{
    "name": "Python Data Science (Stable)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "jupyter.notebookEditor.defaultKernel": "python3"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.pylance"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "pip install -r requirements.txt || echo 'No requirements.txt found'"
}
